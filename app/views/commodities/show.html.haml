%h1 #{@commodity.name}
= image_tag 'ball.png', size: '400x400'
%p 価格 ¥#{@commodity.price}
%p 説明 #{@commodity.description}

= simple_form_for(:cart_commodity, url: cart_commodities_path, class:'form-inline') do |f|
  = f.error_notification
  .form-inputs
    =f.hidden_field :commodity_id, value: @commodity.id
    =f.input :quantity, as: :integer
  .form-actions
    = f.button :submit, label: 'カートに入れる'
